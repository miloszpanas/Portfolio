{
  "name": "portfolio_website",
  "version": "1.0.0",
  "description": "Portfolio website",
  "main": "index.js",
  "scripts": {
    "watch:sass": "node-sass sass/main.scss css/style.css -w",
    "devserver": "live-server",
    "start" : "npm-run-all --parallel devserver watch:sass",

    "compile:sass": "node-sass sass/main.scss css/style-comps.css",
    "prefix:css": "postcss --use autoprefixer -b \"last 10 versions\" css/style-comp.css -o css/style-prefixed.css",
    "compress:css": "node-sass css/style-prefixed.css css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass prefix:css compress:css"
    
  },
  "keywords": [
    "portfolio",
    "website",
    "css",
    "sass",
    "javascript",
    "jquery",
    "RWD",
    "flexbox",
    "grid",
    "custom"
  ],
  "author": "Mi≈Çosz Panas <miloszpanas@gmail.com> (https://github.com/miloszpanas)",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^9.1.5",
    "node-sass": "^4.9.3",
    "npm-run-all": "^4.1.3",
    "postcss-cli": "^6.0.0"
  }
}
